<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/confirmRewardDestinationContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="@color/black">

    <com.dfinn.wallet.common.view.Toolbar
        android:id="@+id/confirmRewardDestinationToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dividerVisible="false"
        app:titleText="@string/staking_reward_destination" />

    <com.dfinn.wallet.feature_wallet_api.presentation.view.extrinsic.GenericExtrinsicInformationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/confirmRewardDestinationExtrinsicInformation"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp" />

    <com.dfinn.wallet.feature_staking_impl.presentation.view.RewardDestinationViewer
        android:id="@+id/confirmRewardDestinationRewardDestination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.dfinn.wallet.common.view.PrimaryButton
        android:id="@+id/confirmRewardDestinationConfirm"
        style="@style/Widget.Nova.Button.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/common_confirm" />
</LinearLayout>